<% if logged_in? %>
<h2> New Post </h2>
<%= render 'posting_form' %>
<% end %>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Show Blog', "app/#{user.name}/posts" %></td>
        <%#<td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %><%#</td>%>
      </tr>
    <% end %>
  </tbody>
</table>

